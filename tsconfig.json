// tsconfig.json
{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": false,
    "target": "es6",
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/", "src/typings/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/typings"]
}
